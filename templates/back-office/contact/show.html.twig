{% extends 'back-office/base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <a class="btn-outline-dark" href="{{ path('contact_index') }}">
        <i class="far fa-arrow-alt-circle-left"></i> Contacts
    </a>
    <h1 class="text-center">Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ contact.createdAt|date('d-m-Y') ? contact.createdAt|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Validé</th>
                <td>{{ contact.checked ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('back-office/contact/_delete_form.html.twig') }}
{% endblock %}