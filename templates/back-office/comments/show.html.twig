{% extends 'back-office/base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <a class="btn-outline-dark" href="{{ path('comments_index') }}">
        <i class="far fa-arrow-alt-circle-left"></i> Commentaires
    </a>

    <h1 class="text-center">Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ comment.date|date('d-m-Y') ? comment.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ comment.updatedAt|date('d-m-Y') ? comment.updatedAt|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('back-office/comments/_delete_form.html.twig') }}
{% endblock %}