{% extends 'back-office/base.html.twig' %}

{% block title %}Cat√©gories{% endblock %}

{% block body %}
    <h1 class="text-center">Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="pr-3 action">
                    <div class="action text-right">
                        <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="col-12 text-right">
        <a class="btn btn-success" href="{{ path('category_new') }}">
            Nouveau <i class="fas fa-plus"></i>
        </a>
    </div>
{% endblock %}