{% extends 'back-office/base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <h1 class="text-center">Article</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Publié</th>
                <th>Publication</th>
                <th>Catégoprie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title ?? 'null'}}</td>
                <td><p class="text-justify summary">{{ article.summary|striptags }}</p></td>
                <td>{{ article.published ? 'Yes' : 'No' ?? 'null'}}</td>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' ?? 'null' }}</td>
                <td>{{ article.categories.name ?? 'null' }}</td>
                <td class="text-right pr-3">
                    <div class="action">
                        <a class="btn btn-info" href="{{ path('article_show', {'id': article.id}) }}">
                            <i class="far fa-eye"></i>
                        </a>
                        <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="col-12 text-right">
        <a class="btn btn-success" href="{{ path('article_new') }}">
            Nouveau <i class="fas fa-plus"></i>
        </a>
    </div>
{% endblock %}

