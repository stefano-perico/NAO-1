{% extends 'back-office/base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <a class="btn-outline-dark" href="{{ path('image_index') }}">
        <i class="far fa-arrow-alt-circle-left"></i> Images
    </a>
    <h1 class="text-center">Image</h1>

    {% if image.image is defined %}
        <figure>
            <img src="{{ asset('img/'~image.image.name) }}" alt="{{ image.image.name }}" width="100%">
            <figcaption>{{ image.alt }}</figcaption>
        </figure>
    {% endif %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ image.image.name }}</td>
            </tr>
            <tr>
                <th>Texte alternatif</th>
                <td>{{ image.alt }}</td>
            </tr>
            <tr>
                <th>Nom original</th>
                <td>{{ image.image.originalName }}</td>
            </tr>
            <tr>
                <th>Extension</th>
                <td>{{ image.image.mimeType }}</td>
            </tr>
            <tr>
                <th>Dimensions (ko)</th>
                <td>{{ image.image.size }}</td>
            </tr>
            <tr>
                <th>RÃ©solution</th>
                <td>{{ image.image.dimensions.0 }}/{{ image.image.dimensions.1 }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-right mb-3">
        <a class="btn btn-primary" href="{{ path('image_edit', {'id': image.id}) }}">edit</a>
    </div>


    {{ include('back-office/image/_delete_form.html.twig') }}
{% endblock %}