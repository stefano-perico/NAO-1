{% extends 'base.html.twig' %}
{% block style %}
    {{ parent() }}
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
          integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
          crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <style>
        #mapid{
            height: 100%;
            min-height: 595px;
        }
    </style>
{% endblock %}
{% block body %}
    <section class="container-fluid">
        <div id="mapid" class="map-container z-depth-1-half"></div>
    </section>

    <section class="container-fluid">
        <h5></h5>
        <table class="table table-hover text-center">

            <!--Table head-->
            <thead>
            <tr>
                <th>Famille</th>
                <th>Taxon</th>
                <th>Nom</th>
                <th>date</th>
                <th>auteur</th>
                <th>description</th>
            </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>
            <!--Table-->
            {% for ob in obs %}
                <tr>
                    <td>{{ ob.species.famille }}</td>
                    <td>{{ ob.species.lbNom }}</td>
                    <td>{{ ob.species.nomFr }}</td>
                    <td>{{ ob.date | date("d/m/Y") }}</td>
                    <td>{{ ob.author.firstName | escape}}</td>
                    <td>{{ ob.description | escape}}</td>
                </tr>
            {% endfor %}
            </tbody>
            <!--Table body-->
            <!--Table-->
        </table>
    </section>


{% endblock %}
{% block script %}
    {{ parent() }}
 <script>
        $(document).ready(function() {
            // initialisation de la map + position de la map
            var $mymap = L.map('mapid').setView([46.72, 2.61], 5);
            L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}', {
                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 6,
                minZoom: 5,
                id: 'mapbox.streets',
                accessToken: 'pk.eyJ1IjoiZnJvc3RlIiwiYSI6ImNqaDd3OHdtbzAwbm0ycXFsbmFtOTJidTIifQ.C6l9gAch8EEE5fxzCIF35g'
            }).addTo($mymap);

            var napIcon = L.icon({
                iconUrl: '{{ asset('imgSite/element_logo_NAO.png') }}',
                iconSize: [108, 103], // size of the icon

                popupAnchor: [-3, -76] // point from which the popup should open relative to the iconAnchor
            });

            var $myItems =
                [
                    {% for ob in obs %}
                        ["{{  ob.description }}", {{ ob.position.latitude }}, {{ ob.position.longitude }}],
                    {% endfor %}
                ];

            for (var $i = 0; $i < $myItems.length; $i++) {
                $marker = new L.marker([$myItems[$i][1], $myItems[$i][2]], {icon: napIcon})
                    .bindPopup($myItems[$i][0])
                    .addTo($mymap)
            }
        });
    </script>
{% endblock %}
