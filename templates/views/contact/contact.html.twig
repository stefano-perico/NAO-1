{% extends 'base.html.twig' %}

{% block body %}
    <!--Section: Contact v.2-->
    <section class="container">
        <!--Section heading-->
        <h2 class="font-weight-bold text-center my-5">Nous contacter</h2>
        <!--Section description-->
        <p class="text-center mx-auto mb-5">
            Si vous avez une question ou vous souhaitez en savoir plus sur l'association, n'hésitez pas à nous contacter
        </p>
        <div class="row">
            <article class="col-md-9 mb-md-0 mb-5">
                {{ form_start(contactForm) }}

                <div class="form-group">
                    {{ form_errors(contactForm.email) }}
                    <div class="ui-widget">
                        {{ form_label(contactForm.email, 'Votre mail', {'label_attr':{'class':'grey-text'}}) }}
                        {{ form_widget(contactForm.email, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>

                <hr>

                <div class="form-group">
                    {{ form_errors(contactForm.subject) }}
                    <div class="ui-widget">
                        {{ form_label(contactForm.subject, 'Votre sujet', {'label_attr':{'class':'grey-text'}}) }}
                        {{ form_widget(contactForm.subject, {'attr':{'class':'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(contactForm.message, 'Votre message',
                        {'label_attr':{'class':'grey-text'}}) }}
                    {{ form_widget(contactForm.message, {'attr':{'class':'form-control','rows':3}}) }}
                </div>
                <div class="form-group text-right">
                    <button class="col-6 btn btn-success" type="submit">{{ 'btn_submit' | trans }}<i class="fa fa-paper-plane-o ml-2"></i></button>
                </div>
                {{ form_end(contactForm) }}
                <!-- Default form contact -->
            </article>
            <aside class="col-md-3 text-center">
                    <ul class="list-unstyled mb-0">
                        <li><i class="fas fa-map-marker-alt fa-2x"></i>
                            <p>11 rue de l'arbre à montpellier</p>
                        </li>

                        <li><i class="fa fa-phone mt-4 fa-2x"></i>
                            <p>01 55 58 35 12</p>
                        </li>

                        <li><i class="fa fa-envelope mt-4 fa-2x"></i>
                            <p>contact@nao.com</p>
                        </li>
                    </ul>
            </aside>
        </div>
    </section>

{% endblock %}