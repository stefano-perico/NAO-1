{% extends 'base.html.twig' %}

{% block body %}

    <div class="card text-white border-0 mb-5">
        <img class="card-img cover-custom" src="{{ asset('imgSite/Vos observation.png') }}" alt="Bouteille à la mers">
        <div class="card-img-overlay d-flex justify-content-center">
            <div class="col-md-10">
                <div class="row" style="height: 100%">
                    <div class="col-12 text-center mt-2 align-self-center">
                        <h1 class="text-white" style="font-size: 2em">Vos observations</h1>
                        <div class="d-flex justify-content-center">
                            <div style="background: rgba(255,255,255,0.7);" class="pt-3 pb-3 pl-5 pr-5">
                                <h2>Pour ajouter une observation</h2>
                                <p class="font-weight-bold" style="color: black;">Vous devez vous connecter</p>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="{{ path('connexion') }}">
                                <img class="mr-2 ml-2" src="{{ asset('imgSite/buttons/connexion.png') }}" alt="connexion" width="200px">
                            </a>
                            <a href="{{ path('createAccount') }}">
                                <img class="mr-2 ml-2" src="{{ asset('imgSite/buttons/Creer - 1.png') }}" alt="connexion" width="200px">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">

        <div class="row">
            {% for item in elementPage.item %}
                <div class="col-md-6 mt-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <img class="mt-2" src="{{ asset('imgSite/'~item.imgPath) }}" alt="" width="100%">
                        </div>
                        <div class="col-lg-6">
                            <h3 class="text-center mb-0 mt-2">{{ item.title }}</h3>
                            <p class="font-weight-bold text-center mb-0 text-truncate">{{ item.underTitle }}</p>
                            <p class="text-justify mt-0 truncate-custom">{{ item.summary }}</p>
                        </div>
                        <div class="col-12 text-right">
                            <a class="btn btn-outline-light" data-toggle="modal" data-target="#modal-{{ loop.index }}"><img src="{{ asset('imgSite/buttons/Symbole 3 – 6.png') }}" alt="" height="50px"></a>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="modal-{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">{{ item.title }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <img class="mt-2 float-right pl-2" src="{{ asset('imgSite/'~item.imgPath) }}" alt="" width="50%">
                                <p class="text-justify">{{ item.content }}</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div class="card my-4 border-0 text-center mt-5 col-md-6">
                <p class="font-weight-bold mb-0">un peu de blabla</p>
                <p class="text-muted mt-0">Un peu de texte et blabla et blabla et bla et encore blabla</p>
                <a href="#"><img class="align-self-center" src="{{ asset('imgSite/buttons/news.png') }}" alt="NewsLetter" width="200px"></a>
                <a href="#"><img class="align-self-center mt-2" src="{{ asset('imgSite/buttons/don.png') }}" alt="NewsLetter" width="200px"></a>
            </div>
        </div>

    </div>

{% endblock %}