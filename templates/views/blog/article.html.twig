{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-12 mt-5">
                <h2 class="card-title">{{ article.title }}</h2>
            </div>
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                {% if article is defined %}
                    <!-- Blog Post -->

                    <div>
                        Posté le {{ article.date|date('d-M-Y') }} par
                        <a href="{{ path('user_show', {'id': article.author.id}) }}">{{ article.author.firstName ~ ' ' ~ article.author.lastName }}</a>
                    </div>

                    <div class="card mb-4">
                        {% if article.image.image is defined %}
                            <figure>
                                <img class="card-img-top" src="{{ asset('img/'~article.image.image.name) }}" alt="{{ article.image.image.name }}">
                                <figcaption>{{ article.image.alt }}</figcaption>
                            </figure>
                        {% endif %}
                        <div class="card-body">
                            <p class="card-text text-justify">{{ article.content }}</p>
                            <div class="text-right">
                                <a href="{{ path('blogArticle' ,{slug : article.Slug}) }}">
                                    <img src="{{ asset('imgSite/buttons/Symbole 3 – 6.png') }}" alt="" height="50px;">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">

                    </div>
                {% endif %}

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Rechercher</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nom de l'article..">
                            <span class="input-group-btn">
                  <button class="btn btn-secondary search" type="button"><img src="{{ asset('imgSite/ic_search.png') }}" alt="" height="30px"></button>
                </span>
                        </div>
                    </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4 articles-decouvrir">
                    <h5 class="card-header">D'autres articles à découvrir</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <ul class="list-unstyled mb-0">
                                    {% for article in article %}
                                        <li>
                                            <a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4 border-0 text-center mt-5">
                    <p class="font-weight-bold">un peu de blabla</p>
                    <p class="text-muted mt-2">Un peu de texte et blabla et blabla et bla et encore blabla</p>
                    <a href="#"><img class="align-self-center" src="{{ asset('imgSite/buttons/news.png') }}" alt="NewsLetter" width="80%"></a>
                </div>

            </div>

        </div>
        <!-- /.row -->

    </div>
{% endblock %}