{% extends 'testingDavid/base.html.twig' %}

{% block title %}Comments index{% endblock %}

{% block body %}
    <h1>Comments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Parent</th>
                <th>Content</th>
                <th>Name</th>
                <th>Date</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.article.Slug }}</td>
                <td>{% if comment.parent.id is defined %}{{ comment.parent.id }}{% else %}null{% endif %}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.author.firstName }} {{ comment.author.lastName }}</td>
                <td>{{ comment.Date ? comment.Date|date('Y-m-d') : '' }}</td>
                <td>{{ comment.UpdatedAt ? comment.UpdatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('comments_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comments_new') }}">Create new</a>
{% endblock %}