{% extends 'testingDavid/base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Content</th>
                <th>Published</th>
                <th>Date</th>
                <th>UpdateAt</th>
                <th>Cat√©goprie</th>
                <th>Slug</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.summary }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                <td>{{ article.updateAt ? article.updateAt|date('Y-m-d') : '' }}</td>
                <td>{{ article.categories.name }}</td>
                <td>{{ article.slug }}</td>
                <td>
                    {% if article.image.image is defined %}
                        <img src="{{ asset('img/'~article.image.image.name) }}" width="100%">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}